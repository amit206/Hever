@{
    ViewBag.Title = "Index";
    Hever.Models.Users activeUser = ((Hever.Models.Users)Session["User"]);
}

<div class="box" style="flex-direction: column">
    <div class="col-lg-12">
        <hr>
        <h2 class="intro-text text-center text-info" style="font-size:30px">
            Error
            <strong>@ViewBag.ErrorMessage</strong>
        </h2>
        <hr>
    </div>
    <div style="text-align: right">
        @if (activeUser == null)
        {
            @Html.ActionLink("Go to login page", "Login", "Users")
        }
    </div>
</div>

