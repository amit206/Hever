@{
    Hever.Models.Users activeUser = ((Hever.Models.Users)Session["user"]);
}
<ul class="navbar-nav bd-navbar-nav flex-row navbar-right" style="margin-top: 1%; width:18%">
    @if (activeUser == null)
    {
        <li class="nav-item" style="margin-right: 8%">
            <a href="/Users/Create" data-toggle="tootip" title="Register" style="color: black">
                <i class="fas fa-user-plus" style="font-size: 30px;padding-left: 35%;"></i>
                <h4> register </h4>
            </a>
        </li>
         <li class="nav-item">
            <a class="navbar-link" href="/Users/Login" data-toggle="tootip" title="Login" style="color:black">
                <i class="fas fa-sign-in-alt" style="font-size: 30px; margin-left:20%"></i>
                <h4> Login </h4>
            </a>
        </li>
    }
    else
    {
        <li class="nav-item" style="margin-right: 20px;">
            <a style="color: black !important; font-size: 18px; pointer-events: none;" href="Users/Edit/@(activeUser.Id)">
                <h4> Welcome @(activeUser.UserName) </h4>
            </a>
        </li>
        <li class="nav-item" style="margin-right: 10px">
            <a class="navbar-link" href="/Users/Logoff" data-toggle="tootip" title="Logoff" style="color:black">
                <span class="fas fa-sign-out-alt" style="font-size: 30px; margin-left:27px"></span>
                <h4> Logoff </h4>
            </a>
        </li>
    }
</ul>